generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Invoice {
  id         Int     @id @default(autoincrement())
  insurance String
  amount    Int
  payout    Int
  status    String @default("in progress")
  file      String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}


model Clinic {
  id       Int   @id @default(autoincrement())
  name     String
  imageUrl String
  city     String
  phone    String
  address  String
  email    String
  website  String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  insurances String
}

model Contact {
  id            Int   @id @default(autoincrement())
  firstName     String
  lastName      String
  company       String
  termOfService Boolean
  email         String
  country       String
  number        String
  businessType  String
  interest      String
  message       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Notification {
  id        Int      @id @default(autoincrement())
  title     String
  message   String
  type      String   // e.g., "success", "error", "info", "warning"
  read      Boolean  @default(false)
  userId    Int      
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}